pipeline {
    agent any
    tools {
        maven 'Maven-3.9.11'  // Must exactly match the Name in Jenkins tool config
    }

    environment {
        SONAR_TOKEN = credentials('biro-sonar-token') // SonarQube token
    }

    stages {
        stage('Check Maven') {
            steps {
                sh 'mvn -v'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('biro-sample') {
                    sh """
                       mvn sonar:sonar \
                         -Dsonar.projectKey=com.yourcompany.biro-sample \
                         -Dsonar.projectName=biro-Sample \
                         -Dsonar.login=$SONAR_TOKEN
                    """
                }
            }
        }

        stage('Upload Artifact to Nexus') {
            steps {
                nexusArtifactUploader(
                  nexusVersion: 'nexus3',
                  protocol: 'http',
                  nexusUrl: '192.168.56.13:8081',
                  groupId: 'com.mycompany.app',
                  version: '1.0-SNAPSHOT',
                  repository: 'bro-snapshot',
                  credentialsId: 'biro-nexus',
                  artifacts: [
                    [artifactId: 'my-app',
                     classifier: '',
                     file: 'target/my-app-1.0-SNAPSHOT.jar',
                     type: 'jar']
                  ]
                )
            }
        }
    }
}
