pipeline {
    agent any
    tools {
        maven 'Maven-3.9.11'  // Must exactly match the Name in Jenkins tool config
    }

    environment {
        SONAR_TOKEN = credentials('biro-sonar-token') // SonarQube token
    }

    stages {
        stage('Check Maven') {
            steps {
                sh 'mvn -v'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('biro-sample') {
                    sh """
                       mvn sonar:sonar \
                         -Dsonar.projectKey=com.yourcompany.biro-sample \
                         -Dsonar.projectName=biro-Sample \
                         -Dsonar.login=$SONAR_TOKEN
                    """
                }
            }
        }

        stage('Deploy to Nexus') {
            steps {
                // Use withCredentials block to inject Nexus username and password securely
                withCredentials([usernamePassword(
                    credentialsId: 'biro-nexus', 
                    usernameVariable: 'NEXUS_USER', 
                    passwordVariable: 'NEXUS_PASS'
                )]) {
                    sh """
                       mvn deploy \
                         -Dnexus.username=$NEXUS_USER \
                         -Dnexus.password=$NEXUS_PASS
                    """
                }
            }
        }
    }
}
